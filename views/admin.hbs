<h2>Reviews</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">_id</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each reviews}}
      <tr>
        <th scope="row">{{this._id}}</th>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td>
            <a href="/movies/{{this.movieId}}/{{this._id}}" id="deleteReview" data-review-id=${this._id}>Delete</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
