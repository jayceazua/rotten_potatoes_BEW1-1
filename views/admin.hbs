<h2>Reviews</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">_id</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each reviews}}
      <tr>
        <th scope="row">{{this._id}}</th>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td>
            <form method="POST" action="/movies/{{this.movieId}}/reviews/{{this._id}}?_method=DELETE">
                <button type="submit">Delete</button>
            </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
