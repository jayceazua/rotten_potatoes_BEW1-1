<!-- views/reviews-edit.handlebars -->
<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <form method="POST" action="/movies/{{movie.id}}/reviews/{{review._id}}?_method=PATCH">
            {{> reviews-form}}

            <div class='text-right'>
                <!-- Close button to go back  -->
                <a href="/movies/{{movie.id}}">Close</a>
                <!-- Submit the form input -->
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Save Review</button>
                </div>
            </div>
        </form>
    </div>
</div>

