<!-- views/reviews-show.handlebars -->
<a href="/movies">Back to Home</a>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h1>{{review.title}}</h1>
        <h2>{{review.movieTitle}}</h2>
        <p>{{review.description}}</p>


        <div class='text-right'>
            <!-- Delete button -->
            <form method="POST" action="/movies/{{review.movieId}}/reviews/{{review._id}}?_method=DELETE">
                <button class="btn btn-danger" type="submit">Delete</button>
            </form>
            <!-- Edit Button -->
            <a class="btn btn-info" href="/movies/{{review.movieId}}/reviews/{{review._id}}/edit">Edit</a>
        </div>


        <!-- Comment form -->
        {{> comments-form}}
        <hr>
        <!-- Show Comments -->
        {{#each comments}}
            {{> comment}}
        {{/each}}
    </div>
</div>
